import ExperienceItem from "./ExperienceItem.astro";
const EXPERIENCIE = [
{
    date: "Actualmente",
    title: "Soporte de Sistemas y Redes",
    company: "Grupo Marsan",
    description:
      "Me ocupo del soporte de sistemas y redes, así como de la administración y mantenimiento de infraestructura tecnológica. He liderado y participado en proyectos enfocados en la organización interna de activos tecnológicos, implementación de soluciones innovadoras y optimización de procesos IT, contribuyendo a una mayor eficiencia operativa y reducción de costes. Mi enfoque combina el soporte técnico diario con una visión estratégica de mejora continua y modernización tecnológica."
  },
  {
    date: "Septiembre - Noviembre 2024",
    title: "Desarrollador Web",
    company: "Siscom Software Factory",
    description:
      "En mis prácticas en Siscom, desarrollé software a medida para clientes utilizando C# con .NET Framework y .NET Core MVC para el backend. En el frontend, trabajé con HTML, CSS, JavaScript y Bootstrap. Integrando NuGets como Entity Framework o EPPlus. Utilicé herramientas como Visual Studio para el desarrollo, Microsoft SQL Server Management Studio y MySQL Workbench para la administración de bases de datos, y Beyond Compare para el control de versiones."
  },
  {
    date: "Enero 2023 - Diciembre 2024",
    title: "Visual Merchandising",
    company: "Addiction Tu Moda",
    description:
      "Encargado del merchandising visual de las pantallas en modo mosaico en el escaparate de la tienda, así como del mantenimiento informático.En este trabajo combino el diseño gráfico con el desarrollo web.",
  },
  {
    date: "Abril - Junio 2022",
    title: "Técnico de impresión",
